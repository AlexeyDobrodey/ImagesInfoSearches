<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"

    android:background="@drawable/selector_row"
    android:clickable="true">
    >

    <ImageView
        android:id="@+id/country_flag_image"
        android:transitionName="@string/transition_name_flag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bangladesh"
        android:layout_centerVertical="true"
        />

    <TextView
        android:id="@+id/country_rank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="rank: Bangladesh"
        android:layout_toRightOf="@id/country_flag_image"
        android:layout_marginLeft="5dp"
        android:textSize="16sp"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/country_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="country: Bangladesh"
        android:layout_below="@+id/country_rank"
        android:layout_toRightOf="@id/country_flag_image"
        android:layout_marginLeft="5dp"
        android:textSize="16sp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/country_population"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="population: Bangladesh"
        android:layout_below="@+id/country_name"
        android:layout_toRightOf="@id/country_flag_image"
        android:layout_marginLeft="5dp"
        android:textSize="16sp"
        android:textStyle="bold"
        />

</RelativeLayout>